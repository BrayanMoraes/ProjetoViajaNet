
@{
    ViewData["Title"] = "Checkout";
}

    <div class="text-center" id="app">
        <h3 class="display-4">Checkout</h3>
        <p>Execute um novo checkout</p>
        <div class="row">
            <div class="col-md-5">
                <select class="form-control" v-model="order.ItemTypeId">
                    <option v-for="item in itemList" :value="item.id">{{item.description}}</option>
                </select>
            </div>
            <div class="col-md-5">
                <input type="number" step="0.01" class="form-control" v-model="order.Quantity" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary" v-on:click="createOrder()">Realizar checkout</button>
            </div>            
        </div>
    </div>

    <script src="~/lib/Vue/CheckoutController.js"></script>